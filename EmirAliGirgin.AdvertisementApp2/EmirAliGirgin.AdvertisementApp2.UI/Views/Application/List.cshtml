@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<AdvertisementListDto>

<div class="container-fluid">
    @if (Model?.Count > 0)
    {
        <table class="mt-3 table table-sm table-hover table-striped">
            <thead>
                <tr>
                    <th>İlan Adı</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Durum</th>
                    <th>İşlem</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.CreatedDate.ToString("ddd,dd MMM yyyy")</td>
                        <td>@(item.Status?"Aktif":"Pasif")</td>
                        <td><a asp-action="Update" asp-controller="Application" asp-route-id="@item.Id"> Güncelle </a></td>
                        <td><a asp-action="Remove" asp-controller="Application" asp-route-id="@item.Id"> Sil </a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-end my-3 p-1">
            <a asp-action="Create" asp-controller="Application"> Yeni İlan Oluştur</a>
        </div>

        <div class="text-end text-center lead">
           Herhangi bir ilan bulunmamaktadır.
        </div>
    }
</div>